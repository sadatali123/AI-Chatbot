{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "index.html",
    "vite.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}


